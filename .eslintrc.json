{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb", "airbnb/hooks", "plugin:react/jsx-runtime", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-native"],
  "rules": {
    "no-use-before-define": ["error", { "variables": false }],
    "react/style-prop-object": ["error", { "allow": ["StatusBar"] }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
